<h2>Articles Index</h2>

<button {{action "toggleShowReturned"}}>
  {{#if showReturned}}
    Show All
  {{else}}
    Show Returned
  {{/if}}
</button>

<table class="primary">
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed since</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredResults as |article|}}
      {{articles/article-row article=article save="save" articleStates=possibleStates}}
    {{/each}}
  </tbody>
</table>
